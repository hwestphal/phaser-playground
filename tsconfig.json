{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "amd",
    "target": "es2021",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
  },
  "files": [
    "src/index.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}