{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "target": "es2021",
        "module": "amd",
        "jsx": "preserve",
        "moduleResolution": "node",
        "importHelpers": true,
        "allowJs": true,
        "sourceMap": false,
        "noUnusedLocals": false,
        "lib": [
            "dom",
            "ES2021"
        ],
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*.ts", 
        "src/vue-shim.d.ts",
         "src/**/*.vue",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}