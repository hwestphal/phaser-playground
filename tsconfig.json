{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "allowJs": true,
        "sourceMap": false,
        "lib": [
            "dom",
            "ESNext.String"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"],
    }