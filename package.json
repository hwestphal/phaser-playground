{
  "private": true,
  "scripts": {
    "comment00": "==== run the course",
    "comment01": "npm watch is at localhost/baby...., NOT at :8080",
    "build": "rm -rf dist/ && tsc --noEmit && webpack --config webpack.player.config.js",
    "watch": "webpack --watch --config webpack.player.config.js",
    "comment02": "==== run the editor",
    "buildeditor": "webpack --config webpack.editor.config.js && npm run copyeditor",
    "watcheditor": "webpack --watch --config webpack.editor.config.js",
    "copyeditor": "cp src_editor/runtime/_index.* dist_editor/index.html  && cp src_editor/mod_gamecode/3djoomla.php dist_editor && cp src_editor/runtime/3d.css dist_editor && cp -R assets dist_editor/assets",
    "clean": "rm -rf dist/",
    "start:static": "http-server -s -c-1 dist",
    "test": "jest --env=jsdom"
  },
  "dependencies": {
    "@types/jquery": "^3.5.5",
    "@types/jsdom": "^16.2.12",
    "baby": "^1.1.0",
    "chokidar": "^3.5.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "expose-loader": "^1.0.3",
    "file-loader": "^6.0.0",
    "http-server": "^0.12.3",
    "monaco-editor": "^0.25.2",
    "monaco-editor-webpack-plugin": "^4.0.0",
    "prismjs": "^1.24.1",
    "raw-loader": "^4.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.3.5",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@gamestdio/scorm": "^0.1.3",
    "@types/jest": "^26.0.23",
    "@types/prismjs": "^1.16.2",
    "jest": "^27.0.6",
    "speed-measure-webpack-plugin": "^1.4.2",
    "ts-jest": "^27.0.3"
  }
}
