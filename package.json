{
    "private": true,
    "scripts": {
        "comment00": "==== run the course",
        "comment01": "npm watch is at localhost/baby...., NOT at :8080",
        "build": "rm -rf dist/ && tsc --noEmit && webpack --config webpack.player.config.js && npm run copy2moodle",
        "watch": "webpack --watch --config webpack.player.config.js",
        "copy2moodle": "mkdir -p ../../moodle/mod/mathcode/dist && cp -R dist/*.* ../../moodle/mod/mathcode/dist && cp lib/*.* ../../moodle/mod/mathcode/dist",
        "comment02": "==== run the editor",
        "buildeditor": "rm -rf dist_editor && webpack --config webpack.editor.config.js && npm run copyeditor",
        "watcheditor": "webpack --watch --config webpack.editor.config.js",
        "copyeditor": "cp src_editor/runtime/index.php dist_editor/index.php  && cp src_editor/runtime/3d.css dist_editor && cp -R assets dist_editor/assets",
        "clean": "rm -rf dist/",
        "start:static": "http-server -s -c-1 dist",
        "test": "jest --env=jsdom"
    },
    "dependencies": {
        "@types/babylonjs": "^2.4.1",
        "@types/jquery": "^3.5.5",
        "@types/jsdom": "^16.2.12",
        "chokidar": "^3.5.2",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.5.3",
        "expose-loader": "^1.0.3",
        "file-loader": "^6.2.0",
        "http-server": "^0.12.3",
        "mini-css-extract-plugin": "^0.9.0",
        "monaco-editor": "^0.29.1",
        "monaco-editor-webpack-plugin": "^5.0.0",
        "prismjs": "^1.25.0",
        "raw-loader": "^4.0.2",
        "style-loader": "^1.2.1",
        "ts-loader": "^8.0.14",
        "typescript": "^4.4.3",
        "url-loader": "^3.0.0",
        "vue": "^3.2.24",
        "vue-loader": "^16.8.3",
        "vue-tsx-loader": "^0.1.1",
        "webpack": "^4.46.0",
        "webpack-cli": "^4.8.0"
    },
    "devDependencies": {
        "@gamestdio/scorm": "^0.1.3",
        "@types/jest": "^26.0.23",
        "@types/prismjs": "^1.16.2",
        "jest": "^27.0.6",
        "speed-measure-webpack-plugin": "^1.4.2",
        "ts-jest": "^27.0.3"
    }
}
